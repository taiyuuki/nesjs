{
  "name": "nesjs",
  "version": "2.2.6",
  "description": "A NES emulator library for JavaScript",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter=\"@nesjs/core\" build && pnpm --filter=\"@nesjs/native\" build && pnpm --filter=\"@nesjs/vue3\" build && pnpm --filter=\"@nesjs/react\" build",
    "build:core": "pnpm --filter=\"@nesjs/core\" build",
    "build:native": "pnpm --filter=\"@nesjs/native\" build",
    "build:vue3": "pnpm --filter=\"@nesjs/vue3\" build",
    "build:react": "pnpm --filter=\"@nesjs/react\" build",
    "dev": "pnpm --parallel --filter=\"!@nesjs/vue3\" dev",
    "dev:vue3": "pnpm --filter=\"@nesjs/vue3\" dev",
    "dev:react": "pnpm --filter=\"@nesjs/react\" dev",
    "test": "pnpm --recursive test",
    "test:core": "pnpm --filter=\"@nesjs/core\" test",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint --fix",
    "clean": "pnpm --recursive clean",
    "typecheck": "pnpm --recursive typecheck",
    "patch": "esno scripts/bump.ts patch",
    "minor": "esno scripts/bump.ts minor",
    "major": "esno scripts/bump.ts major",
    "health": "esno scripts/health-check.ts",
    "publish:all": "pnpm --filter=\"@nesjs/core\" publish && pnpm --filter=\"@nesjs/native\" publish && pnpm --filter=\"@nesjs/vue3\" publish && pnpm --filter=\"@nesjs/react\" publish",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "nes",
    "emulator",
    "javascript",
    "typescript",
    "retro",
    "games"
  ],
  "author": "taiyuuki <taiyuuki@qq.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@nesjs/core": "workspace:^",
    "@taiyuuki/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "@types/pako": "catalog:",
    "@types/prompts": "catalog:",
    "eslint": "catalog:",
    "esno": "catalog:",
    "fast-glob": "catalog:",
    "kolorist": "catalog:",
    "prompts": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "catalog:",
    "vitepress": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9"
      }
    }
  }
}